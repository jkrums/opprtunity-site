<div class="title">
  <h1>Ways I connect.</h1>
</div>

<div class="wizard-connect">
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope icon-2x"></i></span>
    <%= f.input_field :email,
      label: false,
      :style => 'width: 460px',
      :id => 'email',
      type: 'email',
      placeholder: 'Email Address'
    %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-phone icon-2x"></i></span>
    <%= f.input_field :phone,
      label: false,
      :style => 'width: 460px',
      :id => 'phone',
      type: 'tel',
      placeholder: 'Phone Number'
    %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-cloud icon-2x"></i></span>
    <%= f.input_field :skype,
      label: false,
      :style => 'width: 460px',
      :id => 'skype',
      type: 'text',
      placeholder: 'Skype ID'
    %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-google-plus icon-2x"></i></span>
    <%= f.input_field :google_plus,
      label: false,
      :style => 'width: 460px',
      :id => 'google_plus',
      type: 'url',
      placeholder: 'Google+'
    %>
  </div>
</div>
<div align="center">Please enter at least email and phone.</div>
